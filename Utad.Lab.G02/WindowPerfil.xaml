<Window x:Class="Utad.Lab.G02.WindowPerfil"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Utad.Lab.G02"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Title="Perfil" Height="350" Width="650" WindowStartupLocation="CenterScreen" Icon="\Imagens\ICON TRABALHO.png">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="273,45,0,0" Text="Nome:" VerticalAlignment="Top" Height="21" TextWrapping="Wrap" Foreground="White" Width="52" FontSize="16" />
        <TextBox x:Name="tbNome" HorizontalAlignment="Left" Margin="335,45,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="34" Width="162" Opacity="1" IsReadOnly="True" BorderThickness="0,0,0,0" Background="Transparent" Foreground="White" FontSize="16"/>
        <TextBlock HorizontalAlignment="Left" Margin="285,100,0,0" TextWrapping="Wrap" Text="Sexo:" VerticalAlignment="Top" Height="29" Foreground="White" FontSize="16" Width="40"/>
        <TextBox x:Name="tbSexo" HorizontalAlignment="Left" Margin="336,100,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="22" IsReadOnly="True" BorderThickness="0,0,0,0" Width="161"  Background="Transparent" Foreground="White" FontSize="16"/>
        <TextBlock HorizontalAlignment="Left" Margin="175,158,0,0" TextWrapping="Wrap" Text="Data de Nascimento:" VerticalAlignment="Top" Height="23" Foreground="White" FontSize="16" Width="150"/>
        <TextBox x:Name="tbNascimento" HorizontalAlignment="Left" Margin="335,158,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="96" IsReadOnly="True" BorderThickness="0,0,0,0"  Background="Transparent" Foreground="White" FontSize="16"/>
        <Image x:Name="imgPerfil" Stretch="Fill"  HorizontalAlignment="Left" Height="146" Margin="21,26,0,0" VerticalAlignment="Top" Width="145" Source="\Imagens\profilee.png"/>
        <Button x:Name="btEditarPerfil" Content="Editar Perfil" HorizontalAlignment="Left" Margin="539,227,0,0" VerticalAlignment="Top" Click="btEditarPerfil_Click" Height="24" Width="64"/>
        <TextBlock HorizontalAlignment="Left" Margin="42,229,0,0" TextWrapping="Wrap" Text="Peso (kg):" VerticalAlignment="Top" Foreground="White" FontSize="16"/>
        <TextBox x:Name="tbPeso" HorizontalAlignment="Left" Margin="115,230,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="31" IsReadOnly="True" BorderThickness="0,0,0,0"  Background="Transparent" Foreground="White" FontSize="16"/>
        <TextBlock HorizontalAlignment="Left" Margin="29,283,0,0" TextWrapping="Wrap" Text="Altura (cm):" VerticalAlignment="Top" Foreground="White" FontSize="16"/>
        <TextBox x:Name="tbAlturaCM" HorizontalAlignment="Left" Margin="114,283,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="31" IsReadOnly="True" BorderThickness="0,0,0,0"  Background="Transparent" Foreground="White" FontSize="16" RenderTransformOrigin="0.465,0.444"/>
        <TextBlock HorizontalAlignment="Left" Margin="146,229,0,0" TextWrapping="Wrap" Text="no dia" VerticalAlignment="Top" Foreground="White" FontSize="16"/>
        <TextBox x:Name="tbPesoDia" HorizontalAlignment="Left" Margin="195,230,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="100" IsReadOnly="True" BorderThickness="0,0,0,0"  Background="Transparent" Foreground="White" FontSize="16"/>
        <TextBlock HorizontalAlignment="Left" Margin="149,283,0,0" TextWrapping="Wrap" Text="no dia" VerticalAlignment="Top" Foreground="White" FontSize="16"/>
        <TextBox x:Name="tbAlturaDia" HorizontalAlignment="Left" Margin="200,283,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="90" IsReadOnly="True" BorderThickness="0,0,0,0" RenderTransformOrigin="0.478,0.6"  Background="Transparent" Foreground="White" FontSize="16"/>
        <Button x:Name="btnAlerarPeso" Content="Editar Peso" HorizontalAlignment="Center" Margin="0,231,0,0" VerticalAlignment="Top" Click="btnPeso_Click"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,2,0,0" TextWrapping="Wrap" Text="O seu perfil:" VerticalAlignment="Top" FontSize="22" Foreground="White"/>
        <Button x:Name="btVoltar" Content="Voltar" HorizontalAlignment="Left" Margin="539,270,0,0" VerticalAlignment="Top" Click="btVoltar_Click" Height="24" Width="64"/>
        <Button x:Name="btnAlterarAltura" Content="Editar Altura" HorizontalAlignment="Center" Margin="0,285,0,0" VerticalAlignment="Top" Click="btnAlterarAltura_Click"/>
    </Grid>
    <Window.Background>
        <ImageBrush ImageSource="\Imagens\BgAplicWithoutIcon.jpeg"/>
    </Window.Background>
</Window>