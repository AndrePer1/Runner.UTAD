<Window x:Class="Utad.Lab.G02.WindowAddAtividade"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Utad.Lab.G02"
        mc:Ignorable="d"
        Background="Beige"
        Title="Adicionar atividade" WindowStartupLocation="CenterScreen" Height="550" Width="450" Icon="/Imagens/ICON TRABALHO.png">
    <Grid>
        <Image Source="/Imagens/BgAplicWithoutIcon.jpeg" Stretch="UniformToFill">
        </Image>
        <Label Content="Tipo:" Margin="139,24,215,0" VerticalAlignment="Top" Height="32" Foreground="White" FontSize="16"/>
        <ComboBox x:Name="cbTipo" Foreground="#FF5DA4F9" Background="{x:Null}" HorizontalAlignment="Left" Margin="193,30,0,0" VerticalAlignment="Top" Width="129" Height="20"/>
        <!--<ComboBoxItem Content="Corrida"/>
        <ComboBoxItem Content="Caminhada"/>-->

        <Label Content="Data (inicio):" HorizontalAlignment="Left" Margin="87,58,0,0" VerticalAlignment="Top" FontSize="16" Foreground="White"/>
        <DatePicker x:Name="dtInicio" HorizontalAlignment="Left" Margin="193,62,0,0" VerticalAlignment="Top" Width="129" Background="#FF5DA4F9" SelectedDateFormat="Short" Text="sdfs"/>

        <Label Content="Descrição:" HorizontalAlignment="Left" Margin="31,291,0,0" VerticalAlignment="Top" FontSize="16" Foreground="White"/>
        <TextBox x:Name="tbDescri" Foreground="#FF5DA4F9" Background="{x:Null}" HorizontalAlignment="Left" Margin="127,291,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="214" Height="74"/>
        <Label Content="Selecionar Calçado:" HorizontalAlignment="Left" Margin="18,377,0,0" VerticalAlignment="Top" Width="164" FontSize="16" Foreground="White" Height="42"/>
        <Label Content="Kilómetros percorridos:" HorizontalAlignment="Left" Margin="13,201,0,0" VerticalAlignment="Top" Width="200" FontSize="16" Foreground="White"/>
        <Label Content="Ritmo:" HorizontalAlignment="Left" Margin="58,240,0,0" VerticalAlignment="Top" FontSize="16" Foreground="White"/>
        <Label Content="Hora de inicio:" HorizontalAlignment="Left" Margin="72,90,0,0" VerticalAlignment="Top" FontSize="16" Width="128" Foreground="White"/>
        <TextBox x:Name="tbHorasInicio" Foreground="#FF5DA4F9" Background="{x:Null}" HorizontalAlignment="Left" Margin="200,93,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="45" Height="26"/>
        <Label Content=":" HorizontalAlignment="Left" Margin="251,87,0,0" VerticalAlignment="Top" FontSize="18" Foreground="White"/>
        <TextBox x:Name="tbPerc" TextChanged="tbRitmo_TextChanged" Foreground="#FF5DA4F9" Background="{x:Null}" HorizontalAlignment="Left" Margin="213,204,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="92" Height="25"/>
        <TextBox x:Name="tbMinutosInicio" Foreground="#FF5DA4F9" Background="{x:Null}" HorizontalAlignment="Left" Margin="270,93,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="44" Height="26"/>
        <TextBox x:Name="tbRitmo" TextChanged="tbRitmo_TextChanged" Foreground="#FF5DA4F9" Background="#FF4D6B8F" HorizontalAlignment="Left" Margin="213,244,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="92" Height="24" />
        <CheckBox x:Name="cbNo" Content="Não" HorizontalAlignment="Left" Margin="174,415,0,0" VerticalAlignment="Top" Height="24" Width="64" FontSize="16" Foreground="White"/>
        <CheckBox x:Name="cbYes" Content="Sim, qual" HorizontalAlignment="Left" Margin="174,386,0,0" VerticalAlignment="Top" Height="24" Width="106" FontSize="16" Foreground="#FFFFFCFC"/>
        <Button x:Name="btnConcluido" Content="Concluído" HorizontalAlignment="Left" Margin="253,462,0,0" VerticalAlignment="Top" FontSize="16" Height="32" Width="104" Click="btnConcluido_Click"/>
        <Button x:Name="btnCancel" Content="Cancelar" HorizontalAlignment="Left" Margin="68,462,0,0" VerticalAlignment="Top" FontSize="16" Height="32" Width="100" Click="btnCancel_Click" />
        <ComboBox x:Name="cbCalc" HorizontalAlignment="Left" Margin="266,383,0,0" VerticalAlignment="Top" Width="149"/>
        <Label Content="Data (termino):" HorizontalAlignment="Left" Margin="69,126,0,0" VerticalAlignment="Top" FontSize="16" Foreground="White"/>
        <DatePicker x:Name="dtFim" HorizontalAlignment="Left" Margin="193,133,0,0" VerticalAlignment="Top" Width="129" Background="#FF5DA4F9" SelectedDateFormat="Short" Text="sdfs"/>
        <Label Content="Hora de termino:" HorizontalAlignment="Left" Margin="56,159,0,0" VerticalAlignment="Top" FontSize="16" Width="133" Foreground="White"/>
        <TextBox x:Name="tbHorasFim" Foreground="#FF5DA4F9" Background="{x:Null}" HorizontalAlignment="Left" Margin="200,163,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="45" Height="26"/>
        <TextBox x:Name="tbMinutosFim" Foreground="#FF5DA4F9" Background="{x:Null}" HorizontalAlignment="Left" Margin="270,162,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="44" Height="26"/>
        <Label Content=":" HorizontalAlignment="Left" Margin="251,155,0,0" VerticalAlignment="Top" FontSize="18" Foreground="White"/>
        <TextBlock HorizontalAlignment="Left" Margin="122,238,0,0" TextWrapping="Wrap" Text="(Valor calculado automaticamente em minutos/kilometro)" VerticalAlignment="Top" Foreground="White" FontSize="9" Height="38" Width="86"/>










    </Grid>
</Window>
