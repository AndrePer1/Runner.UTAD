<Window x:Class="Utad.Lab.G02.WindowPeso"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Utad.Lab.G02"
        mc:Ignorable="d"
        Title="Peso" Height="175" Width="250" WindowStartupLocation="CenterScreen" Icon="\Imagens\ICON TRABALHO.png">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="10,0,0,0" TextWrapping="Wrap" Text="Peso (kg):" VerticalAlignment="Center" Foreground="White"/>
        <TextBox x:Name="tbPeso" HorizontalAlignment="Left" Margin="66,0,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="29" Foreground="#FF5DA4F9" Background="{x:Null}"/>
        <TextBlock HorizontalAlignment="Left" Margin="105,0,0,0" TextWrapping="Wrap" Text="Dia:" VerticalAlignment="Center" Foreground="White"/>
        <DatePicker x:Name="dpPeso" HorizontalAlignment="Left" Margin="131,0,0,0" VerticalAlignment="Center" Background="#FF5DA4F9"/>
        <Button x:Name="btnGuardar" Content="Guardar" HorizontalAlignment="Left" Margin="115,99,0,0" VerticalAlignment="Top" Click="btnGuardar_Click"/>
        <Button x:Name="btnCancelar" Content="Cancelar" HorizontalAlignment="Left" Margin="177,99,0,0" VerticalAlignment="Top" Click="btnCancelar_Click"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" Text="Editor de Peso:" VerticalAlignment="Top" FontSize="18" Foreground="White"/>
    </Grid>
    <Window.Background>
        <ImageBrush ImageSource="\Imagens\BgAplicWithoutIcon.jpeg"/>
    </Window.Background>
</Window>
