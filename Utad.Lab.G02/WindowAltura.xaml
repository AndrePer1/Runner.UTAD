<Window x:Class="Utad.Lab.G02.WindowAltura"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Utad.Lab.G02"
        mc:Ignorable="d"
        Title="Altura" Height="175" Width="270" WindowStartupLocation="CenterScreen" Icon="\Imagens\ICON TRABALHO.png">
    <Grid>
        <TextBox x:Name="tbValor" HorizontalAlignment="Left" Margin="71,50,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="44" Foreground="#FF5DA4F9" Background="{x:Null}"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,50,0,0" TextWrapping="Wrap" Text="Dia:" VerticalAlignment="Top" Foreground="White"/>
        <DatePicker x:Name="dpAltura" HorizontalAlignment="Left" Margin="149,47,0,0" VerticalAlignment="Top" Background="#FF5DA4F9"/>
        <Button x:Name="btGuardarAlteracoes" Content="Guardar" HorizontalAlignment="Left" Margin="131,112,0,0" VerticalAlignment="Top" Click="btGuardarAlteracoes_Click"/>
        <Button x:Name="btCancelarAlteracoes" Content="Cancelar" HorizontalAlignment="Left" Margin="194,112,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.506,0.456" Click="btCancelarAlteracoes_Click"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,50,0,0" TextWrapping="Wrap" Text="Altura (cm):" VerticalAlignment="Top" Foreground="White"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,16,0,0" TextWrapping="Wrap" Text="Editor de Altura:" VerticalAlignment="Top" Foreground="White"/>
    </Grid>
    <Window.Background>
        <ImageBrush ImageSource="\Imagens\BgAplicWithoutIcon.jpeg"/>
    </Window.Background>
</Window>
