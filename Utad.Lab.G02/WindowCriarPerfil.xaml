<Window x:Class="Utad.Lab.G02.WindowCriarPerfil"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Utad.Lab.G02"
        mc:Ignorable="d"
        Closing="Window_Closing"
        Title="Criar Perfil" Height="350" Width="650" WindowStartupLocation="CenterScreen" Icon="\Imagens\ICON TRABALHO.png">
    <Grid>
        <TextBox x:Name="tbNome" GotFocus="tbNome_GotFocus" HorizontalAlignment="Left" Margin="285,40,0,0" TextWrapping="Wrap" Text="Nome" VerticalAlignment="Top" Width="182" Height="16" Foreground="#FF5DA4F9" Background="{x:Null}" LostFocus="tbNome_LostFocus"/>
        <DatePicker x:Name="dpNascimento" HorizontalAlignment="Left" Margin="285,105,0,0" VerticalAlignment="Top" Width="109" Background="#FF5DA4F9"/>
        <TextBlock HorizontalAlignment="Left" Margin="285,20,0,0" TextWrapping="Wrap" Text="Introduza o seu nome:" VerticalAlignment="Top" Foreground="White" FontSize="15"/>
        <TextBlock HorizontalAlignment="Left" Margin="285,80,0,0" TextWrapping="Wrap" Text="Introduza a Data de Nascimento:" VerticalAlignment="Top" FontSize="15" Foreground="White"/>
        <TextBlock HorizontalAlignment="Left" Margin="285,199,0,0" TextWrapping="Wrap" Text="Introduza o seu peso:" VerticalAlignment="Top" FontSize="15" Foreground="White"/>
        <TextBox x:Name="tbPeso" GotFocus="tbPeso_GotFocus" HorizontalAlignment="Left" Margin="285,224,0,0" TextWrapping="Wrap" Text="Peso" VerticalAlignment="Top" Width="182" Foreground="#FF5DA4F9" Background="{x:Null}" LostFocus="tbPeso_LostFocus"/>
        <TextBlock HorizontalAlignment="Left" Margin="285,255,0,0" TextWrapping="Wrap" Text="Introduza a sua altura:" VerticalAlignment="Top" FontSize="15" Foreground="White"/>
        <TextBox x:Name="tbAltura" HorizontalAlignment="Left" GotFocus="tbAltura_GotFocus" Margin="285,280,0,0" TextWrapping="Wrap" Text="Altura" VerticalAlignment="Top" Width="182" Foreground="#FF5DA4F9" Background="{x:Null}" LostFocus="tbAltura_LostFocus"/>
        <Button x:Name="btnGuardar" Content="Guardar" HorizontalAlignment="Left" Margin="555,250,0,0" VerticalAlignment="Top" Click="btnGuardar_Click"/>
        <Button x:Name="btCancelar" Content="Cancelar" HorizontalAlignment="Left" Margin="554,280,0,0" VerticalAlignment="Top" Click="btCancelar_Click"/>
        <ComboBox x:Name="cbSexo" HorizontalAlignment="Left" Margin="285,165,0,0" VerticalAlignment="Top" Width="120" FontSize="16" Height="26">
            <ComboBoxItem Content="Masculino"/>
            <ComboBoxItem Content="Feminino"/>
        </ComboBox>
        <Image x:Name="imgPerfil" HorizontalAlignment="Left" Height="120" Margin="45,40,0,0" VerticalAlignment="Top" Width="120" Source="\Imagens\profilee.png"/>
        <Button x:Name="btnFoto" Content="Adicionar Foto de Perfil" HorizontalAlignment="Left" Margin="41,185,0,0" VerticalAlignment="Top" Click="btnFoto_Click"/>
        <TextBlock HorizontalAlignment="Left" Margin="285,144,0,0" TextWrapping="Wrap" Text="Introduza o seu sexo:" VerticalAlignment="Top" FontSize="15" Foreground="White"/>
    </Grid>
    <Window.Background>
        <ImageBrush ImageSource="\Imagens\BgAplicWithoutIcon.jpeg"/>
    </Window.Background>
</Window>
