<Window x:Class="Utad.Lab.G02.WindowDefObjetivo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Utad.Lab.G02"
        mc:Ignorable="d"
        Background="White"
        Title="Definir Objetivo" WindowStartupLocation="CenterScreen" Height="305" Width="395" Icon="/Imagens/ICON TRABALHO.png">
    <Grid>
        <Image Source="/Imagens/BgAplicWithoutIcon.jpeg" Stretch="UniformToFill" Margin="0,0,-1,0"/>
        <Label Content="Tipo de Objetivo:" HorizontalAlignment="Left" Margin="51,34,0,0" VerticalAlignment="Top" FontSize="16" Foreground="White"/>
        <ComboBox x:Name="objet" HorizontalAlignment="Left" Margin="200,40,0,0" VerticalAlignment="Top" Width="153" Height="20">
            <!--<ComboBoxItem Content="Corrida" Name="C"/>
        <ComboBoxItem Content="Caminhada" Name="CAM"/>
        <ComboBoxItem Content="Peso" Name="P"/>-->
        </ComboBox>
        <Label Content="Data Limite(opcional):" HorizontalAlignment="Left" Margin="19,84,0,0" VerticalAlignment="Top" FontSize="16" Foreground="White"/>
        <DatePicker x:Name="datalim"  Background="#FF5DA4F9" HorizontalAlignment="Left" Margin="200,88,0,0" VerticalAlignment="Top" Width="153"/>
        <Label Content="Meta:" HorizontalAlignment="Left" Margin="132,184,0,0" VerticalAlignment="Top" FontSize="16" Foreground="White"/>
        <TextBox x:Name="metaValor" Background="{x:Null}" HorizontalAlignment="Left" Margin="200,188,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="113" Height="23" Foreground="White"/>
        <Button Content="Adicionar" Margin="233,236,0,0" FontSize="16" Click="Button_Click" HorizontalAlignment="Left" Width="120" Height="32" VerticalAlignment="Top"/>
        <Button x:Name="btnCancel" Content="Cancelar" HorizontalAlignment="Left" Margin="66,236,0,0" VerticalAlignment="Top" FontSize="16" Height="32" Width="102" Click="btnCancel_Click" Foreground="Black"/>
        <TextBox x:Name="nome_de_objet" Margin="172,142,0,0" TextWrapping="Wrap" Text="" HorizontalAlignment="Left" Width="181" Height="27" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Height="24" Margin="32,145,0,0" TextWrapping="Wrap" Text="Nome do objetivo:" VerticalAlignment="Top" Width="170" Foreground="#FFFCFCFC" FontSize="16"/>

    </Grid>
</Window>
