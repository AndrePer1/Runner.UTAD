<Window x:Class="Utad.Lab.G02.WindowEditarPerfil"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Utad.Lab.G02"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Closing="Window_Closing"
        Title="Editar Perfil" Height="350" Width="650" WindowStartupLocation="CenterScreen" Icon="\Imagens\ICON TRABALHO.png">
    <Grid>
        <Image x:Name="imgPerfil" HorizontalAlignment="Left" Height="100" Margin="45,37,0,0" VerticalAlignment="Top" Width="100" Source="\Imagens\profilee.png"/>
        <Button x:Name="btnEditFoto" Content="Editar Foto de Perfil" HorizontalAlignment="Left" Margin="41,152,0,0" VerticalAlignment="Top" Click="btnEditFoto_Click"/>
        <TextBlock HorizontalAlignment="Left" Margin="206,77,0,0" TextWrapping="Wrap" Text="Nome:" VerticalAlignment="Top" Height="22" Foreground="White" FontSize="16" Width="51"/>
        <TextBox x:Name="tbNome"  HorizontalAlignment="Left" Margin="293,77,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Foreground="White" FontSize="16" Background="Transparent" Height="30"/>
        <TextBlock HorizontalAlignment="Left" Margin="218,162,0,0" TextWrapping="Wrap" Text="Sexo:" VerticalAlignment="Top" Height="22" Foreground="White" FontSize="16" Width="39"/>
        <ComboBox x:Name="cbSexo" HorizontalAlignment="Left" Margin="293,164,0,0" VerticalAlignment="Top" Width="120" FontSize="16" Height="26">
            <ComboBoxItem Content="Masculino"/>
            <ComboBoxItem Content="Feminino"/>
        </ComboBox>
        <TextBlock HorizontalAlignment="Left" Margin="107,242,0,0" TextWrapping="Wrap" Text="Data de Nascimento:" VerticalAlignment="Top" Height="26" Foreground="White" FontSize="16" Width="150"/>
        <Button x:Name="btGuardarAlteracoes" Content="Guardar Alterações" HorizontalAlignment="Left" Margin="507,265,0,0" VerticalAlignment="Top" Click="btGuardarAlteracoes_Click"/>
        <Button x:Name="btCancelar" Content="Cancelar" HorizontalAlignment="Left" Margin="535,290,0,0" VerticalAlignment="Top" Click="btCancelar_Click"/>
        <DatePicker x:Name="dpNascimento" HorizontalAlignment="Left" Margin="293,243,0,0" VerticalAlignment="Top" Width="116" Background="#FF5DA4F9"/>
        <TextBlock HorizontalAlignment="Left" Margin="262,13,0,0" TextWrapping="Wrap" Text="Editor de Perfil:" VerticalAlignment="Top" FontSize="22" Foreground="White"/>
    </Grid>
    <Window.Background>
        <ImageBrush ImageSource="\Imagens\BgAplicWithoutIcon.jpeg"/>
    </Window.Background>
</Window>
