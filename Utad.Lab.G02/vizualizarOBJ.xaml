<Window x:Class="Utad.Lab.G02.vizualizarOBJ"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Utad.Lab.G02"
        mc:Ignorable="d"
        Background="White"
        Title="Visualizar Objetivo" WindowStartupLocation="CenterScreen" Height="460" Width="450" Icon="/Imagens/ICON TRABALHO.png">
    <Grid Margin="0,0,-70,-156">
        <Image Source="/Imagens/BgAplicWithoutIcon.jpeg" Stretch="UniformToFill" RenderTransformOrigin="0.5,0.5" Height="445" VerticalAlignment="Top" HorizontalAlignment="Left" Width="450">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <Label Content="Tipo de Objetivo:" HorizontalAlignment="Left" Margin="51,34,0,0" VerticalAlignment="Top" FontSize="16" Foreground="White"/>
        <!--<ComboBoxItem Content="Corrida" Name="C"/>
        <ComboBoxItem Content="Caminhada" Name="CAM"/>
        <ComboBoxItem Content="Peso" Name="P"/>-->

        <Label Content="Data Limite(opcional):" HorizontalAlignment="Left" Margin="19,84,0,0" VerticalAlignment="Top" FontSize="16" Foreground="White"/>
        <DatePicker x:Name="datalim1" Background="#FF5DA4F9" HorizontalAlignment="Left" Margin="200,88,0,0" VerticalAlignment="Top" Width="153" IsEnabled="False"/>
        <Label Content="Meta:" HorizontalAlignment="Left" Margin="118,201,0,0" VerticalAlignment="Top" FontSize="16" Foreground="White"/>
        <TextBox x:Name="metaValor1" Background="{x:Null}" HorizontalAlignment="Left" Margin="206,200,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="126" Height="32" Foreground="White" IsEnabled="False"/>
        <Button x:Name="btnCancel1" Content="Cancelar" HorizontalAlignment="Left" Margin="188,372,0,0" VerticalAlignment="Top" FontSize="16" Height="32" Width="102" Click="btnCancel_Click" Foreground="Black" RenderTransformOrigin="2.137,0.626"/>
        <TextBox x:Name="nome_do_objet1" Margin="172,142,0,0" TextWrapping="Wrap" Text="" HorizontalAlignment="Left" Width="181" Height="27" VerticalAlignment="Top" IsEnabled="False" />
        <TextBlock HorizontalAlignment="Left" Height="24" Margin="32,145,0,0" TextWrapping="Wrap" Text="Nome do objetivo:" VerticalAlignment="Top" Width="170" Foreground="#FFFCFCFC" FontSize="16"/>
        <TextBlock HorizontalAlignment="Left" Height="68" Margin="52,261,0,0" TextWrapping="Wrap" Text="Data de Alcance:" VerticalAlignment="Top" Width="131" FontSize="16" Foreground="White" RenderTransformOrigin="-0.237,0.854"/>
        <DatePicker Background="#FF5DA4F9" HorizontalAlignment="Left" Margin="188,261,0,0" VerticalAlignment="Top" Width="153" IsEnabled="False" />
        <TextBlock x:Name="tipoObj" HorizontalAlignment="Left" Margin="200,42,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="23" Width="132" Foreground="White" FontSize="16"/>

    </Grid>
</Window>

