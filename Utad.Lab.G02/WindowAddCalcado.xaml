<Window x:Class="Utad.Lab.G02.WindowAdicionar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Utad.Lab.G02"
        mc:Ignorable="d"
        Icon="/Imagens/ICON TRABALHO.png"
        Title="Adicionar Calçado" WindowStartupLocation="CenterScreen" Height="400" Width="400">
    <Grid>
        <Image Source="/Imagens/BgAplicWithoutIcon.jpeg" Stretch="UniformToFill"/>
        <TextBlock HorizontalAlignment="Left" Margin="90,37,0,0" TextWrapping="Wrap" Text="Marca:" VerticalAlignment="Top" Foreground="White" FontSize="16"/>
        <TextBox x:Name="tbMarca" HorizontalAlignment="Left" Margin="152,40,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="138" Foreground="#FF5DA4F9" Background="{x:Null}"/>
        <TextBlock HorizontalAlignment="Left" Margin="79,84,0,0" TextWrapping="Wrap" Text="Modelo:" VerticalAlignment="Top" Foreground="White" FontSize="16"/>
        <TextBox x:Name="tbModelo" HorizontalAlignment="Left" Margin="152,87,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="138" Foreground="#FF5DA4F9" Background="{x:Null}"/>
        <TextBlock HorizontalAlignment="Left" Margin="18,190,0,0" TextWrapping="Wrap" Text="Data de Compra:" VerticalAlignment="Top" Foreground="White" FontSize="16"/>
        <TextBox x:Name="tbCor" HorizontalAlignment="Left" Margin="152,134,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Foreground="#FF5DA4F9" Background="{x:Null}" Width="138" RenderTransformOrigin="0.547,0.641"/>
        <TextBlock HorizontalAlignment="Left" Margin="109,131,0,0" TextWrapping="Wrap" Text="Cor:" VerticalAlignment="Top" Foreground="White" FontSize="16"/>
        <TextBlock HorizontalAlignment="Left" Margin="26,240,0,0" TextWrapping="Wrap" Text="Limite Máx. Quilometros:" VerticalAlignment="Top" Foreground="White" FontSize="16"/>
        <TextBox x:Name="tbLimQ" HorizontalAlignment="Left" Margin="217,242,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Foreground="#FF5DA4F9" Background="{x:Null}" Width="123"/>
        <Button x:Name="btnAdicionar" Content="Adicionar" HorizontalAlignment="Left" Margin="87,290,0,0" VerticalAlignment="Top" Width="74" Height="20" Click="btnAdicionar_Click"/>
        <Button x:Name="btnCancelar" Content="Cancelar" HorizontalAlignment="Left" Margin="241,290,0,0" VerticalAlignment="Top" Width="75" Height="20" Click="btnCancelar_Click"/>
        <DatePicker x:Name="dpCompra" HorizontalAlignment="Left" Margin="152,189,0,0" VerticalAlignment="Top" Width="138" Background="#FF5DA4F9"/>


    </Grid>

</Window>
